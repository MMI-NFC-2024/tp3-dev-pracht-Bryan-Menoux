---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
---

<Layout>
  <a
    href="/"
    class="text-lg font-medium text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-md shadow fixed top-6 left-6 z-10"
    >← Retour à l'accueil</a
  >
  <h1
    class="text-4xl md:text-5xl font-extrabold text-gray-900 text-center mb-12 select-none mt-16"
  >
    Mes Pingouins
  </h1>
  <select
    id="species"
    class="block mx-auto p-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-lg"
  >
    <option selected disabled value="">Selectionnez une espèce</option>
    <option value="Adelie">Adelie</option>
    <option value="Chinstrap">Chinstrap</option>
    <option value="Gentoo">Gentoo</option>
  </select>
  <div class="relative w-full max-w-3xl mx-auto overflow-x-scroll">
    <div class="flex transition-transform duration-500 ease-in-out">
      <div class="w-full shrink-0" id="Adelie">
        <GraphicSpecies species="Adelie" />
      </div>
      <div class="w-full shrink-0" id="Gentoo">
        <GraphicSpecies species="Gentoo" />
      </div>
      <div class="w-full shrink-0" id="Chinstrap">
        <GraphicSpecies species="Chinstrap" />
      </div>
    </div>
  </div>
</Layout>

<script>
  document.querySelector("#species")?.addEventListener("change", (evt) => {
    const value = (evt.target as HTMLSelectElement).value;
    location.hash = value;
  });
</script>
